{
  "name": "@adobe/helix-testutils",
  "version": "0.2.0",
  "description": "Helix Testing Utilities",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --lines 100 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-testutils"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-testutils/issues"
  },
  "homepage": "https://github.com/adobe/helix-testutils#readme",
  "dependencies": {
    "@adobe/helix-log": "4.5.1",
    "mocha": "7.0.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "codecov": "3.6.5",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.2",
    "ghooks": "2.0.4",
    "junit-report-builder": "1.3.3",
    "lint-staged": "10.1.3",
    "mocha-junit-reporter": "1.23.3",
    "nyc": "15.0.1",
    "semantic-release": "17.0.4"
  },
  "lint-staged": {
    "src/*.js": "eslint",
    "test/*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
