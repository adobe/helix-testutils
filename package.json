{
  "name": "@adobe/helix-testutils",
  "version": "0.2.0",
  "description": "Helix Testing Utilities",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --lines 100 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-testutils"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-testutils/issues"
  },
  "homepage": "https://github.com/adobe/helix-testutils#readme",
  "dependencies": {
    "@adobe/helix-log": "^4.4.1",
    "@snyk/nodejs-runtime-agent": "^1.46.0",
    "mocha": "^7.0.0"
  },
  "bin": {
    "snykmocha": "./bin/snykmocha.js"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "8.0.0",
    "@semantic-release/github": "6.0.1",
    "ajv": "6.10.2",
    "codecov": "3.6.1",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.0",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "junit-report-builder": "1.3.3",
    "lint-staged": "9.5.0",
    "lodash": "4.17.15",
    "mocha-junit-reporter": "1.23.2",
    "nyc": "15.0.0",
    "semantic-release": "16.0.1"
  },
  "snyk": true,
  "lint-staged": {
    "src/*.js": "eslint",
    "test/*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
