{
  "name": "@adobe/helix-testutils",
  "version": "0.2.0",
  "description": "Helix Testing Utilities",
  "main": "src/index.js",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --lines 100 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter",
    "preversion": "npm run junit",
    "postversion": "git push origin master --follow-tags",
    "delete-git-tag": "git tag -d v$npm_package_version && git push origin :v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-testutils"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-testutils/issues"
  },
  "homepage": "https://github.com/adobe/helix-testutils#readme",
  "dependencies": {
    "@snyk/nodejs-runtime-agent": "^1.46.0",
    "mocha": "^6.2.0"
  },
  "bin": {
    "snykmocha": "./bin/snykmocha.js"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@semantic-release/changelog": "3.0.5",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/github": "5.5.5",
    "ajv": "6.10.2",
    "codecov": "3.6.1",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.6.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.18.2",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "junit-report-builder": "1.3.3",
    "lint-staged": "9.4.3",
    "lodash": "4.17.15",
    "mocha-junit-reporter": "1.23.1",
    "nyc": "14.1.1",
    "semantic-release": "15.13.31"
  },
  "snyk": true,
  "lint-staged": {
    "src/*.js": "eslint",
    "test/*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
